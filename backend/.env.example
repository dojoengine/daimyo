# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_CLIENT_ID=your_client_id_here

# Emoji Configuration
DOJO_EMOJI_NAME=dojo
DOJO_EMOJI_ID=optional_custom_emoji_id

# Role IDs
KOHAI_ROLE_ID=your_kohai_role_id
SENPAI_ROLE_ID=your_senpai_role_id
SENSEI_ROLE_ID=your_sensei_role_id

# Database
DATABASE_PATH=./daimyo.db

# Reputation Thresholds
DECAY_WINDOW_DAYS=360
SENPAI_REACTION_THRESHOLD=50
SENPAI_UNIQUE_PERCENT=0.10
SENSEI_REACTION_THRESHOLD=30
SENSEI_UNIQUE_PERCENT=0.20

# Channel IDs
OHAYO_CHANNEL_ID=your_ohayo_channel_id

# Content Pipeline Configuration
# Comma-separated list of Discord channel IDs to scan for content
CONTENT_CHANNEL_IDS=channel_id_1,channel_id_2
# How many days back to scan for messages
CONTENT_PIPELINE_DAYS_BACK=7
# Target number of stories per run
CONTENT_PIPELINE_MIN_STORIES=3
CONTENT_PIPELINE_MAX_STORIES=10
# Cron schedule (default: Sunday 9am UTC)
CONTENT_PIPELINE_CRON=0 9 * * 0

# AI Provider Configuration
# LLM provider: openai or anthropic
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
OPENAI_API_KEY=sk-your-openai-key
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Image provider: dalle or replicate
IMAGE_PROVIDER=dalle
# REPLICATE_API_KEY=r8_your-replicate-key

# Typefully (for draft publishing)
TYPEFULLY_API_KEY=your-typefully-api-key
